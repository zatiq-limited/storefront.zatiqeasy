---
/**
 * ========================================
 * CONTACT PAGE
 * ========================================
 *
 * Fetches data from API and renders sections dynamically
 *
 * Backend API Endpoint: GET /api/storefront/v1/page/contact-us
 */

import Layout from '../layouts/main.astro';
import SectionRenderer from '../components/SectionRenderer';
import { getContactPageData } from '../lib/api-client';

// Fetch contact page data from API
const contactPageData = await getContactPageData();

// Handle null case and extract data
const pageData = contactPageData?.data || contactPageData || {};
const { template = 'contact-us', sections = [], seo = {} } = pageData;
---

<Layout
	title={seo?.title || 'Contact Us'}
	description={seo?.description}
	image={seo?.og?.image}
>
	<main class="zatiq-contact-page">
		<SectionRenderer sections={sections} client:load />
	</main>
</Layout>
