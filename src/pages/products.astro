---
/**
 * ========================================
 * PRODUCTS LISTING PAGE
 * ========================================
 * 
 * All Products page with filters, sorting, and pagination
 * Fully API-driven from products.json
 */

import Layout from '../layouts/main.astro';
import { getProducts } from '../lib/api-client';

// Get query parameters for filtering
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get('page') || '1');
const category = url.searchParams.get('category') || '';
const sort = url.searchParams.get('sort') || 'featured';
const search = url.searchParams.get('search') || '';

// Fetch products from API
let productsData: any = null;
let products: any[] = [];
let pagination: any = null;

try {
  productsData = await getProducts({ page, category, sort, search });
  products = productsData?.products || [];
  pagination = productsData?.pagination || null;
} catch (error) {
  console.error('[Products Page] Failed to load products:', error);
}

const title = search 
  ? `Search Results for "${search}"` 
  : category 
  ? `${category} Products` 
  : 'All Products';
---

<Layout title={`${title} | ZatiqEasy`} description="Shop our complete collection of premium fashion and lifestyle products">
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-50 to-purple-50 py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          {title}
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Discover our curated collection of premium products
        </p>
        {pagination && (
          <p class="mt-4 text-sm text-gray-500">
            Showing {pagination.from}-{pagination.to} of {pagination.total} products
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Filters & Sort Section -->
  <section class="border-b bg-white sticky top-0 z-40 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
        
        <!-- Search -->
        <form method="get" class="flex-1 max-w-md">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input 
              type="search" 
              name="search" 
              value={search}
              placeholder="Search products..." 
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </form>

        <!-- Sort -->
        <div class="flex items-center gap-4">
          <label class="text-sm font-medium text-gray-700">Sort by:</label>
          <select 
            id="sort-select"
            class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            onchange="window.location.href = updateUrlParam('sort', this.value)"
          >
            <option value="featured" selected={sort === 'featured'}>Featured</option>
            <option value="price-asc" selected={sort === 'price-asc'}>Price: Low to High</option>
            <option value="price-desc" selected={sort === 'price-desc'}>Price: High to Low</option>
            <option value="newest" selected={sort === 'newest'}>Newest First</option>
            <option value="rating" selected={sort === 'rating'}>Top Rated</option>
          </select>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      {products.length === 0 ? (
        <!-- Empty State -->
        <div class="text-center py-20">
          <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
          <h3 class="mt-6 text-2xl font-semibold text-gray-900">No products found</h3>
          <p class="mt-2 text-gray-600">Try adjusting your search or filter criteria</p>
          <a href="/products" class="mt-6 inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            View All Products
          </a>
        </div>
      ) : (
        <!-- Products Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {products.map((product: any) => (
            <a 
              href={`/products/${product.product_code?.toLowerCase() || product.id}`}
              class="group bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden"
            >
              <!-- Product Image -->
              <div class="relative aspect-[3/4] overflow-hidden bg-gray-100">
                <img 
                  src={product.image_url} 
                  alt={product.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
                
                {/* Sale Badge */}
                {product.old_price && (
                  <div class="absolute top-3 left-3 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-bold">
                    {Math.round(((product.old_price - product.price) / product.old_price) * 100)}% OFF
                  </div>
                )}

                {/* Stock Badge */}
                {product.quantity <= 10 && product.quantity > 0 && (
                  <div class="absolute top-3 right-3 bg-orange-500 text-white px-3 py-1 rounded-full text-xs font-bold">
                    Only {product.quantity} left
                  </div>
                )}

                {product.quantity === 0 && (
                  <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
                    <span class="text-white font-bold text-lg">Out of Stock</span>
                  </div>
                )}

                {/* Quick View on Hover */}
                <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/60 to-transparent p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <button class="w-full py-2 bg-white text-gray-900 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    Quick View
                  </button>
                </div>
              </div>

              <!-- Product Info -->
              <div class="p-4">
                {/* Brand */}
                {product.brand && (
                  <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">{product.brand}</p>
                )}

                {/* Title */}
                <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  {product.name}
                </h3>

                {/* Rating */}
                {product.review_summary && (
                  <div class="flex items-center gap-1 mb-2">
                    <div class="flex">
                      {Array.from({ length: 5 }).map((_, i) => (
                        <svg 
                          class={`w-4 h-4 ${i < Math.floor(product.review_summary.average_rating) ? 'text-yellow-400' : 'text-gray-300'}`} 
                          fill="currentColor" 
                          viewBox="0 0 20 20"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      ))}
                    </div>
                    <span class="text-xs text-gray-600">
                      ({product.review_summary.total_reviews})
                    </span>
                  </div>
                )}

                {/* Price */}
                <div class="flex items-center gap-2">
                  <span class="text-xl font-bold text-gray-900">
                    ৳{product.price.toLocaleString()}
                  </span>
                  {product.old_price && (
                    <span class="text-sm text-gray-500 line-through">
                      ৳{product.old_price.toLocaleString()}
                    </span>
                  )}
                </div>

                {/* Stock Status */}
                {product.quantity > 0 ? (
                  <p class="mt-2 text-xs text-green-600 font-medium">In Stock</p>
                ) : (
                  <p class="mt-2 text-xs text-red-600 font-medium">Out of Stock</p>
                )}
              </div>
            </a>
          ))}
        </div>

        <!-- Pagination -->
        {pagination && pagination.total_pages > 1 && (
          <div class="mt-12 flex justify-center items-center gap-2">
            {/* Previous */}
            {pagination.current_page > 1 && (
              <a 
                href={`?page=${pagination.current_page - 1}${category ? `&category=${category}` : ''}${sort !== 'featured' ? `&sort=${sort}` : ''}`}
                class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              >
                Previous
              </a>
            )}

            {/* Page Numbers */}
            {Array.from({ length: Math.min(5, pagination.total_pages) }).map((_, i) => {
              const pageNum = i + 1;
              return (
                <a 
                  href={`?page=${pageNum}${category ? `&category=${category}` : ''}${sort !== 'featured' ? `&sort=${sort}` : ''}`}
                  class={`px-4 py-2 rounded-lg transition-colors ${
                    pageNum === pagination.current_page 
                      ? 'bg-blue-600 text-white' 
                      : 'border border-gray-300 hover:bg-gray-50'
                  }`}
                >
                  {pageNum}
                </a>
              );
            })}

            {/* Next */}
            {pagination.current_page < pagination.total_pages && (
              <a 
                href={`?page=${pagination.current_page + 1}${category ? `&category=${category}` : ''}${sort !== 'featured' ? `&sort=${sort}` : ''}`}
                class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              >
                Next
              </a>
            )}
          </div>
        )}
      )}
    </div>
  </section>

  <!-- Category Suggestions (if search has no results) -->
  {products.length === 0 && (
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Shop by Category</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {['Men\'s Fashion', 'Women\'s Fashion', 'Accessories', 'New Arrivals'].map((cat) => (
            <a 
              href={`/products?category=${encodeURIComponent(cat)}`}
              class="p-6 border border-gray-200 rounded-lg text-center hover:border-blue-500 hover:shadow-md transition-all"
            >
              <h3 class="font-semibold text-gray-900">{cat}</h3>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <script>
    // Helper function to update URL params
    function updateUrlParam(param: string, value: string) {
      const url = new URL(window.location.href);
      if (value) {
        url.searchParams.set(param, value);
      } else {
        url.searchParams.delete(param);
      }
      return url.toString();
    }

    // Make it available globally
    (window as any).updateUrlParam = updateUrlParam;
  </script>

  <style>
    /* Custom scrollbar for better UX */
    ::-webkit-scrollbar {
      width: 8px;
    }
    
    ::-webkit-scrollbar-track {
      background: #f1f1f1;
    }
    
    ::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 4px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: #555;
    }
  </style>
</Layout>
