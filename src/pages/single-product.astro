---
/**
 * ========================================
 * FEATURES PAGE
 * ========================================
 *
 * Fetches data from API and renders sections dynamically
 *
 * Backend API Endpoint: GET /api/storefront/v1/page/features
 */

import Layout from '../layouts/main.astro';
import SectionRenderer from '../components/SectionRenderer';
import { getSingleProductPageData } from '../lib/api-client';

// Fetch features page data from API
const singleProductPageData = await getSingleProductPageData();

// Handle null case and extract data
const pageData = singleProductPageData?.data || singleProductPageData || {};
const { template = 'landing-features', sections = [], seo = {} } = pageData;
---

<Layout
	title={seo?.title || 'Features & Benefits'}
	description={seo?.description}
	image={seo?.og?.image}
>
	<main class="zatiq-features-page">
		<SectionRenderer sections={sections} client:load />
	</main>
</Layout>
